fig.add_trace(go.Scatter(x=x, y=decomposition_to.seasonal), row=3, col=1)
fig.add_trace(go.Scatter(x=x, y=decomposition_to.resid), row=4, col=1)

or_color = 'rgba(177, 177, 177, 0.5)'
